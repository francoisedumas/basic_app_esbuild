<div>
  <h1 class="font-bold text-4xl">Nouveau compte</h1>
  <%= simple_form_for(@customer_account, url: user_customer_accounts_path(current_user)) do |f| %>
    <%= render FormComponent.new do |c| %>

      <%= f.input :name, placeholder: "Mon super client" %>
      <%= f.input :vat_number, placeholder: "LU21416127" %>

      <% c.with_action do %>
        <%= f.submit t("save"), class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% end %>
</div>
