<div class="flex-1 pt-5 pb-4 overflow-y-auto <%= media == :mobile ? "h-0" : "flex flex-col" %>">
  <div class="flex items-center flex-shrink-0 px-4">
    <%= image_tag "logo_color.png", class: "h-8 w-auto", alt: "logo" %>
  </div>
  <%= render "sidebar/menu" %>
</div>
<div class="flex-shrink-0 flex items-center justify-between border-t border-gray-500 p-4">
  <%= link_to edit_profile_path, class: "flex-shrink-0 group block" do %>
    <div class="flex items-center">
      <%= image_tag "profile.webp", class: "inline-block h-9 w-9 rounded-full", alt: "profile" %>
      <div class="ml-3">
        <p class="text-sm font-medium text-white"><%= current_user.full_name %></p>
        <p class="text-xs font-medium text-indigo-200 group-hover:text-white"><%= t(".view_profile") %></p>
      </div>
    </div>
  <% end %>

  <%= button_to destroy_user_session_path, method: :delete do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="white" d="m17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5M4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4z"/></svg>
  <% end %>
</div>
